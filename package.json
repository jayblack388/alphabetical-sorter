{
  "name": "alphabetical-sorter",
  "displayName": "Alphabetical Sorter",
  "description": "Multi line or single line alphabetical sorter.",
  "version": "1.0.1",
  "icon": "images/icon.png",
  "publisher": "jayblack388",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jayblack388/alphabetical-sorter"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.sortIt",
        "title": "Alphabetical Sorter"
      }
    ],
    "keybindings": [
      {
        "command": "extension.sortIt",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "commit": "cz",
    "package": "vsce package --no-yarn"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "ovsx": "^0.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
